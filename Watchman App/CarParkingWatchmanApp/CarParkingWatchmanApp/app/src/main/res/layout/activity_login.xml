<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/back1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_bthlogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/watchman_icon"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bg_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:background="#12a6cf38"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edt_watchmen_id"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edittextbackground"
                        android:hint="WatchMen ID"
                        android:inputType="textPersonName"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorBlue"
                        />


                    <EditText
                        android:id="@+id/edt_password"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/edittextbackground"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorBlue"
                        />


                    <CheckBox
                        android:id="@+id/chk_Show_hide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Show Password"
                        android:textStyle="bold"
                        android:buttonTint="@color/colorBlue"
                        android:textColor="@color/colorBlue"/>


                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="320dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/buttonbackground"
                        android:text="LOGIN"
                        android:textColor="@color/white"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">


<!--                        <TextView-->
<!--                            android:id="@+id/txt_ques"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="75dp"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:text="Don't have an account?"-->
<!--                            android:textSize="15dp" />-->

<!--                        <TextView-->
<!--                            android:id="@+id/clk"-->
<!--                            android:layout_width="135dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:autoLink="all"-->
<!--                            android:text="Click here"-->
<!--                            android:textColor="@color/colorBlue"-->
<!--                            android:textSize="15dp"-->
<!--                            android:textStyle="bold"-->
<!--                            />-->

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</ScrollView>
